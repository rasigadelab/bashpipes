Bootstrap: docker
From: continuumio/miniconda3:latest

%files
panaroo.yml /panaroo.yml

%post
/opt/conda/bin/conda install mamba -c conda-forge
/opt/conda/bin/mamba env create -f /panaroo.yml
conda list -n panaroo | grep -v "^#" | awk '{print "  - "$1"="$2}'
. activate panaroo
conda deactivate

%environment
export PATH=/opt/conda/envs/panaroo/bin:$PATH
export JAVA_HOME=/opt/conda/envs/panaroo

